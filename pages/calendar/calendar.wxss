@import"font/iconfont.wxss";
page{
  height: 100%;
}
.wrap{
  height: 100%;
}
.date-show{
    position: relative;
    width: 600rpx;
    height: 100rpx;
    font-family: PingFang-SC-Regular;
    font-size: 38rpx;
    color: #282828;
    text-align: center;
    margin: 15rpx auto 25rpx;
}

.date-show icon{
   padding: 0 50rpx;
}
.date-text{
  width:300rpx;
  display: inline-block;
}
.data-show text{
  padding-bottom: 10rpx;
}
.header{
    font-size: 0;
    padding: 0 24rpx;
}
.header>view{
    display: inline-block;
    width: 14.285%;
    color: #333;
    font-size: 30rpx;
    text-align: center;
    border-bottom: 1px solid #D0D0D0;
    padding: 39rpx 0;
}
.weekMark{
    position: relative;
}
.weekMark view{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    border-bottom: 1px solid #22A7F6;
}
.date-box{
    font-size: 0;
    padding: 10rpx 0;
}
.date-box>view{
    position: relative;
    display: inline-block;
    width: 14.285%;
    color: #020202;
    font-size: 40rpx;
    text-align: center;
    vertical-align: middle;
    margin: 15rpx 0;
}
.date-head{
    height: 60rpx;
    line-height: 60rpx;
}

.date-head icon{
  font-size: 44rpx;
  color: #B4B4B4;
}
.nowDay .date-head{
    width: 60rpx;
    text-align: center;
    margin: 0 auto;
}
.date-weight{
    font-size: 22rpx;
    padding: 15rpx 0;
}
.nowDay .date-weight{
    color: #22A7F6;
}
.one{
    position: absolute;
    bottom: 0;
    right: 5rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: red;
}
.two{
    position: absolute;
    bottom: 30rpx;
    right: 5rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: blue;
}


.thingsWarp{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: fixed;
  bottom: 0px;
}

.things{
  border: 1px solid #B4B4B4;
  border-radius: 5px;
  width: 80%;
  height: 140rpx;
}

.hide{
  display: none;
}

.show{
  display: block;
}

.things text{
  font-size: 12px;
  padding: 10px;
  display: block;
  line-height: 17px;
  color: rgb(95, 94, 94);
}
.white{
  color:#B4B4B4 !important;
}
.red{
  color:#DC4C40 !important;
}
.black{
  color: rgb(96, 127, 181) !important;
}
.blue{
  color:rgb(135, 212, 84) !important;
}